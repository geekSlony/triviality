<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/RADIO"
                />
            <Button
                android:id="@+id/bta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/BTA"
                />
            <Button
                android:id="@+id/ipod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/IPOD"
                />
            <Button
                android:id="@+id/usb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/USB"
                />
            <Button
                android:id="@+id/tel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/TEL"
                />
            <Button
                android:id="@+id/ring"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/RING"
                />
            <Button
                android:id="@+id/off"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/SORCEOFF"
                />
            <Button
                android:id="@+id/volumeup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/VOLUMEUP"
                />
            <Button
                android:id="@+id/volumedown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/VOLUMEDOWN"
                />
            <Button
                android:id="@+id/audiofocus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/AUDIOFOCUS"
                />
            <Button
                android:id="@+id/playbeep1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PLAYBEEP1"
                />
            <Button
                android:id="@+id/playbeep2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PLAYBEEP2"
                />
            <Button
                android:id="@+id/btringon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/BT_RING_ON"
                />
            <Button
                android:id="@+id/btringoff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/BT_RING_OFF"
                />
            <Button
                android:id="@+id/bttelon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/BT_TEL_ON"
                />
            <Button
                android:id="@+id/btteloff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/BT_TEL_OFF"
                />
            <Button
                android:id="@+id/servicebta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/SERVICE.BTA"
                />
            <Button
                android:id="@+id/serviceusb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/SERVICE.USB"
                />
            <Button
                android:id="@+id/servicetel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/SERVICE.TEL"
                />
            <Button
                android:id="@+id/servicering"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/SERVICE.RING"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>  
